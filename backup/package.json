{
  "name": "orion-game-server",
  "version": "1.0.0",
  "description": "A distributed game server framework built with Node.js and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:gateway": "tsx watch src/index.ts gateway",
    "dev:login": "tsx watch src/index.ts login",
    "dev:logic": "tsx watch src/index.ts logic",
    "build": "tsc",
    "start": "tsx src/index.ts",
    "start:gateway": "tsx src/index.ts gateway",
    "start:login": "tsx src/index.ts login",
    "start:logic": "tsx src/index.ts logic",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:api": "node tests/api-test.js",
    "test:security": "node tests/security-test.js",
    "test:simple": "node tests/simple-test.js",
    "test:all": "node tests/run-all-tests.js",
    "clean": "rimraf dist",
    "stop": "taskkill /f /im node.exe || killall node",
    "stop:login": "node scripts/stop-service.js login",
    "stop:gateway": "node scripts/stop-service.js gateway",
    "stop:logic": "node scripts/stop-service.js logic"
  },
  "keywords": [
    "game-server",
    "websocket",
    "typescript",
    "distributed",
    "microservices"
  ],
  "author": "OrionGameServer Team",
  "license": "MIT",
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.5",
    "@types/ws": "^8.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "axios": "^1.11.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
