# Server Configuration
NODE_ENV=development
PORT=3000

# Gateway Server
GATEWAY_PORT=8080
GATEWAY_WS_PORT=8081

# Login Server
LOGIN_PORT=3001

# Logic Server
LOGIC_PORT=3002

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/orion_game
MONGODB_TEST_URI=mongodb://localhost:27017/orion_game_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration
AES_SECRET_KEY=your-32-character-secret-key-here
AES_IV_LENGTH=16

# Security Configuration
BCRYPT_ROUNDS=12
MAX_CONNECTIONS_PER_IP=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5